pipeline {
    agent any  // Runs on any available agent
    
    stages {
        stage('Run Command on Windows') {
            steps {
                script {
                    // Groovy code to execute Windows CMD commands
                    def cmd = 'echo Hello from Windows Command Line!'
                    echo "Running command: ${cmd}"
                    
                    // Execute the command
                    def result = bat(script: cmd, returnStdout: true).trim()
                    
                    // Output the result
                    echo "Command result: ${result}"
                }
            }
        }
    }
}
